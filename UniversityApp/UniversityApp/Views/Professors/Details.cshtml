            @Html.DisplayFor(model => model.HireDate)
        </dd>

        <dd class="col-sm-10">
            <table class="table">
                <tr>

                    <th>Course Title</th>

                </tr>
                @if (Model.FirstProfCourses != null)
                {
                    @foreach (var item in Model.FirstProfCourses)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.FirstProfessor.FirstProfCourses)
                            </td>

                        </tr>
                    }
                }

            </table>
        </dd>
        <dd class="col-sm-10">
            <table class="table">
                <tr>

                    <th>Course Title</th>

                </tr>
                @if (Model.SecondProfCourses != null)
                {
                    @foreach (var item in Model.SecondProfCourses)
                    {
                        <tr>

